<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/large_space"
        android:elevation="@dimen/small_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/large_space">

                <TextView
                    android:id="@+id/lblVehicleNumberPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/big_text" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_space"
                        android:layout_weight="1"
                        android:text="Vehicle Type"
                        android:textSize="@dimen/common_padding"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblVehicleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_space"
                        android:text="@string/app_name"
                        android:textSize="@dimen/common_padding" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_space"
                        android:layout_weight="1"
                        android:text="Challan Amount"
                        android:textSize="@dimen/common_padding"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblChallanAmmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_space"
                        android:text="@string/app_name"
                        android:textSize="@dimen/common_padding" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_space"
                        android:layout_weight="1"
                        android:text="Challan Number"
                        android:textSize="@dimen/common_padding"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblChallanNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_space"
                        android:text="@string/app_name"
                        android:textSize="@dimen/common_padding" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_space"
                        android:layout_weight="1"
                        android:text="Taw Time"
                        android:textSize="@dimen/common_padding"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblTawTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_space"
                        android:text="@string/app_name"
                        android:textSize="@dimen/common_padding" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_space"
                        android:layout_weight="1"
                        android:text="Dispatched Time"
                        android:textSize="@dimen/common_padding"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblDispatchedTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_space"
                        android:text="@string/app_name"
                        android:textSize="@dimen/common_padding" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>